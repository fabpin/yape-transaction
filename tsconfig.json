{
   "compilerOptions": {
      "lib": [
         "es5", "es6", "es7", "es2015", "es2016", "es2017", "es2018","es2019", "es2020","es2021"
      ],
      "target": "es2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictNullChecks": true,
      "inlineSourceMap": true,
      "inlineSources": true
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "node_modules",
      "**/*.spec.ts"
   ]
}